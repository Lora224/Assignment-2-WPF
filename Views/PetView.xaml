<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Assignment_2_WPF.Views.PetView"
        Title="Pet View" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Manage Your Pets" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ListBox x:Name="PetsList" ItemsSource="{Binding Pets}" SelectedItem="{Binding SelectedPet}" Margin="0,0,0,20" SelectionChanged="PetsList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PetName}" FontSize="18" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Breed}" FontSize="18" FontWeight="SemiBold" Margin="10,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Button Content="Add New Pet" Width="100" Click="AddNewPetButton_Click"/>
                <Button Content="Edit Pet" Width="100" Click="EditPetButton_Click" Margin="10,0"/>
                <Button Content="Remove Pet" Width="100" Click="RemovePetButton_Click"/>
            </StackPanel>

         

            <Grid Margin="0,0,0,10"/>

            <TextBlock Text="Activities:" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="0,20,0,5"/>
            <ListBox ItemsSource="{Binding SelectedPet.activities}" Margin="0,0,0,20"/>
            <TextBlock Text="Reminders:" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="0,20,0,5"/>
            <ListBox ItemsSource="{Binding SelectedPet.schedules}"/>
        </StackPanel>
    </Grid>
</Window>
