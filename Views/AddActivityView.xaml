<Window x:Class="Assignment_2_WPF.Views.AddActivityView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2_WPF.Views"
        mc:Ignorable="d"
        Title="AddActivityView" Height="600" Width="800">
    <Grid>
        <Grid x:Name="MainGrid">
            <Grid.Background>
                <ImageBrush ImageSource="/Views/background-cat-2.jpg" Stretch="Uniform"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="97*"/>
            </Grid.ColumnDefinitions>
            <!-- Basic Fields -->
            <TextBlock HorizontalAlignment="Left" Margin="201,93,0,0" TextWrapping="Wrap" Text="Activity Name:" VerticalAlignment="Top" RenderTransformOrigin="0.714,0.717" Height="30" Width="191" FontSize="16" FontFamily="Corbel Light" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="81,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="24" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>

            <TextBlock HorizontalAlignment="Left" Margin="202,141,0,0" TextWrapping="Wrap" Text="Type:" VerticalAlignment="Top" FontFamily="Corbel Light" Height="25" Width="48" FontSize="16"/>
            <ComboBox x:Name="ActivityTypeCombo" 
                     HorizontalAlignment="Left" 
                     Margin="81,144,0,0" 
                     VerticalAlignment="Top" 
                     Width="165"
                     ItemsSource="{Binding ActivityTypes}"
                     SelectedItem="{Binding SelectedActivityType}"
                     SelectionChanged="ActivityType_SelectionChanged" Grid.Column="1">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>


            <!-- Dynamic Playing -->
            <StackPanel x:Name="PlayingFields" Margin="131,392,176,42" Visibility="Collapsed" Grid.ColumnSpan="2">
                <TextBlock 
                   TextWrapping="Wrap" Text="Duration (minutes):" 
                   Height="30" Width="156" 
                   FontSize="16" FontFamily="Corbel Light"/>
                <TextBox x:Name="Duration" 
                 TextWrapping="Wrap" 
                 Width="165" Height="24" 
                 Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock 
                   TextWrapping="Wrap" Text="Activity Level:" 
                   Height="30" Width="157" 
                   FontSize="16" FontFamily="Corbel Light"/>
                <ComboBox x:Name="ActivityLevelCombo"
                  Width="165"
                  ItemsSource="{Binding ActivityLevels}"
                  SelectedItem="{Binding SelectedActivityLevel}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>


            <!-- Common Fields -->
            <TextBlock HorizontalAlignment="Left" Margin="201,192,0,0" TextWrapping="Wrap" Text="Date:" VerticalAlignment="Top" Height="30" Width="68" FontSize="16" FontFamily="Corbel Light"/>
            <DatePicker x:Name="DateSelect"
                       SelectedDate="{Binding ActivityDate}"
                       SelectedDateFormat="Short"
                       HorizontalAlignment="Left"
                       Margin="85,207,0,0"
                       VerticalAlignment="Top"
                       Height="38"
                       Width="165" Grid.Column="1"/>

            <TextBlock HorizontalAlignment="Left" Margin="201,263,0,0" TextWrapping="Wrap" Text="Description:" VerticalAlignment="Top" Height="29" Width="157" FontSize="16" FontFamily="Corbel Light" Grid.ColumnSpan="2"/>
            <TextBox x:Name="Description" HorizontalAlignment="Left" Margin="81,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="24" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1"/>

            <TextBlock HorizontalAlignment="Left" Margin="202,323,0,0" TextWrapping="Wrap" Text="Pet:" VerticalAlignment="Top" RenderTransformOrigin="0.43,0.516" Height="31" Width="48" FontSize="16" FontFamily="Corbel Light"/>
            <ComboBox x:Name="PetsList" 
                     Margin="81,323,0,0" 
                     VerticalAlignment="Top" 
                     Width="165" 
                     Height="22"
                     ItemsSource="{Binding Pets}"
                     SelectedItem="{Binding SelectedPet}"
                     HorizontalAlignment="Left" Grid.Column="1">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding PetName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock HorizontalAlignment="Left" Margin="292,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="194" FontWeight="Bold" FontSize="20" FontFamily="Ink Free" Foreground="#FF706677" Grid.ColumnSpan="2"><Run Text="Adding New Activity"/><LineBreak/><Run/></TextBlock>
            <Button x:Name="AddActivity" 
                    Content="Submit" 
                    HorizontalAlignment="Left" 
                    Margin="199,27,0,0" 
                    VerticalAlignment="Top" 
                    Height="32" 
                    Width="90" 
                    Opacity="0.8" 
                    Click="AddActivity_Click" Background="#FFA6808C" Grid.Column="1">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <!-- Dynamic Walking -->
            <StackPanel x:Name="WalkingFields" Margin="168,392,210,42" Visibility="Collapsed" Grid.ColumnSpan="2">
                <TextBlock x:Name="Duration1" 
                   TextWrapping="Wrap" Text="Duration (minutes):" 
                   FontSize="16" FontFamily="Corbel Light" Height="30" Width="156" RenderTransformOrigin="0.513,0.368"/>
                <TextBox x:Name="Distance" 
                 TextWrapping="Wrap" 
                 Width="166" Height="24" 
                 Text="{Binding Distance, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock x:Name="Distance1" 
                   TextWrapping="Wrap" Text="Distance (meters):" 
                   FontSize="16" FontFamily="Corbel Light" Height="30" Width="158"/>
                <TextBox x:Name="WalkDuration" 
                 TextWrapping="Wrap" 
                 Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}" Height="24" Width="166"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>